<h1>Listing Types</h1>

<table>
  <tr>
    <th>Title</th>  
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
  <% @type.each do |type| %>
    <tr>
      <td><%= type.name %></td>
      <td><%= type.description %></td>
      <td><%= link_to 'Show', type_path(type) %></td>
      <%if current_user.admin? %>
        <td><%= link_to 'Edit', edit_type_path(type) %></td>
        <td><%= link_to 'Destroy', type_path(type),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <%end%>
    </tr>
  <% end %>
</table>